<div class="panel panel-default" style="padding: 15px">

    {% if error_message != '' %}
        <div class="alert alert-danger">{{ error_message }}</div>
    {% endif %}

    {% if success_message != '' %}
        <div class="alert alert-success">{{ success_message }}</div>
    {% endif %}

    <form action="/admin/task/save" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleInputEmail1">User name</label>
            <input type="text" class="form-control" id="id_username" placeholder="User name"
                   value="{{ task['user_name'] }}" name="user_name" required>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                   placeholder="Enter email" value="{{ task['user_email'] }}" name="user_email">
        </div>
        <div class="form-group">
            <label for="textarea">Task</label>
            <textarea class="form-control" id="exampleTextarea" rows="5" name="text" required>{{ task['text'] }}</textarea>
        </div>
        <div class="form-group">
            <label for="exampleInputFile">Select image</label>
            <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp" name="picture">
            <small id="fileHelp" class="form-text text-muted">Image. Must be JPG/GIF/PNG, size — 320х240
            </small>
            {% if task['picture'] != '' %}
                <br><img src="{{ task['picture'] }}">
            {% endif %}
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input type="checkbox" class="form-check-input" name="is_done"
                    {% if task['is_done'] == 1 %} checked {% endif %}">
                Task is done
            </label>
        </div>
        <br/>
        <input type="hidden" name="taskId" value="{{ task['id'] }}">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" id="previewBtn" class="btn btn-warning">Preview</button>
    </form>
</div>